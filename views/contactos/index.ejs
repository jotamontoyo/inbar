
<div class="container-fluid">

	<h4>Contactos</h4><br>

	<div class="panel panel-default table-responsive" id="quizes-panel">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Código</th>
					<th>Nombre</th>
					<th>Alias</th>
					<th>eMail</th>
					<th>Confirmar eMail</th>
					<th>Teléfono</th>
					<th>Marca</th>
					<th>Ciudad</th>
					<th>Provincia</th>
				</tr>
			</thead>
			<tbody>
				<% var i; for (i=0; i < contactos.length; i++) { %>
					<tr>
						<td><%= contactos[i].id %></td>
						<td><a href="/contactos/<%= contactos[i].id %>"><%= contactos[i].nombre %> </a></td>
						<td><a href="/contactos/<%= contactos[i].id %>"><%= contactos[i].alias %> </a></td>
						<td><a href="/contactos/<%= contactos[i].id %>"><%= contactos[i].email %> </a></td>
						<td><a href="/contactos/<%= contactos[i].id %>"><%= contactos[i].emailok %> </a></td>
						<td><a href="/contactos/<%= contactos[i].id %>"><%= contactos[i].telefono %> </a></td>
						<td><a href="/contactos/<%= contactos[i].id %>"><%= contactos[i].marca %> </a></td>
						<td><a href="/contactos/<%= contactos[i].id %>"><%= contactos[i].ciudad %> </a></td>
						<td><a href="/contactos/<%= contactos[i].id %>"><%= contactos[i].provincia %> </a></td>
						<% if (session.user.isAdmin) {%>
							<td><a href="/contactos/<%= contactos[i].id %>/edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
							<td>
								<form method="post" action="contactos/<%= contactos[i].id %>?_method=delete">
									<button class="btn btn-danger btn-sm" type="submit" onClick="return confirm('Borrar: <%= contactos[i].nombre %>');">
										<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
									</button>
								</form>
							</td>
							<% if (!contactos[i].revisado) {%>
								<td><span class="glyphicon glyphicon-alert" aria-hidden="true"></span></td>
							<%} else {%>
								<td><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></td>
							<%}%>
						<%}%>
					</tr>
				<% } %>
			</tbody>
		</table>
	</div>

	<% if (session.user.isAdmin) { %>
		<p><a href="/contactos/new"><button type="button" class="btn btn-primary">
			<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Crear Contacto</button></a></p>
	<% } %>

</div>
